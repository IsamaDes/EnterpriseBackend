{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "lib": ["ESNext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "noEmitOnError": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  